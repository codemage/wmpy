{
  "manifest_version": 2,

  "name": "imgview helper",
  "description": "imgview helper extension",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["event_page.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*.inkbunny.net/*", "https://*.inkbunny.net/*"],
      "js": ["inkbunny_imgview.js"]
    }
  ],

  "permissions": [
    "downloads",
    "http://*.inkbunny.net/",
    "https://*.inkbunny.net/",
    "http://localhost:5000/"
  ],
  
  "web_accessible_resources": ["check.svg", "check_path.svg"]
}
